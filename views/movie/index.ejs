<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head', {title: ' - Movies'}) %>
  <body>
    <%- include('../partials/header') %>
    <!-- Catch Phrase Container -->
      <section id="catch-phrase-container-partial">
          <h2 id="catch-phrase-partial" class="animate__animated animate__fadeIn">
              Chill movies... <%= movie.length %>
          </h2>
      </section>
      <!-- Movie Cards -->
    <div>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    
        <div class="carousel-inner">
          <!-- Slide -->
          <div class="carousel-item active">
            <div class="row row-cols-1 row-cols-md-3 align-items-center c-item1 c-item-row">
              test
            </div>
          </div>
          <% let cards = [] %>
          <% for(i = 0; i<movie.length; i++) { %>
            <% cards.push(movie[i]) %>
            <% if((i+1) % 6 === 0) {%>
              <!-- if i === 6 show avtive  -->
              <!-- include ('carousel-item-active') -->
              <!-- else regular-->
              <%- include('carousel-item', {movies6: cards}) %>
              <% cards = [] %>
              <% } else if(i === movie.length-1) {%>
                <%- include('carousel-item', {movies6: cards}) %>
                <% } %>
          <% }; %>
           
          </div>
        </div>
      </div>
          
          
          
            
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% movie.forEach((movieEl) => { %>
        <a href="/movies/<%= movieEl._id %>">
          <div style="display: inline-block;">

            <img src="<%= movieEl.imgUrl%>" alt="" class="card">
            <!-- <h4><%= movieEl.name %></h4> -->
            
          </div>
        </a>
      <% }) %>
      <br>
      <a href="/movies/new">
        <button>Add new movie</button>
      </a>
    </div>

    <%- include('../partials/footer') %>
  </body>
</html>