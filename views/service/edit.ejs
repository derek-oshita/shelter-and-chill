<!DOCTYPE html>
<html lang="en">
<!-- Head -->
    <%- include('../partials/head', {title: ' - Edit service'}) %>
    <link rel="stylesheet" href="/styles/style.css"> 
<!-- Body -->
  <body>
    <%- include('../partials/header') %>
   <!-- Edit Form -->
    <form action="/services/<%=service._id%>?_method=PUT" method="POST">
        <label for="name">Name</label>
        <input type="text" id="name" name="name" value="<%= service.name %>"/>
        <!-- Price Field -->
        <label for="price">Price</label>
        <input type="number" id="price" name="price" value="<%= service.price %>"/>
        <!-- Image URL Field -->
        <label for="imgUrl">Image Url</label>
        <input type="text" id="imgUrl" name="imgUrl" value="<%= service.imgUrl %>"/>
        <!-- Save Button -->
        <button type="submit">Save</button>
    </form>
    <!-- Footer  -->
    <%- include('../partials/footer') %>
  </body>
</html>
