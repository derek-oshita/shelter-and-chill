<!DOCTYPE html>
<html lang="en">
<!-- Head -->
    <%- include('../partials/head', {title: ' - Edit service'}) %>
    <link rel="stylesheet" href="/styles/style.css"> 
<!-- Body -->
  <body>
    <%- include('../partials/header') %>
   <!-- Edit Form -->
    <form action="/services/<%=service._id%>?_method=PUT" method="POST">

      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="name">Name:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= service.name %>"/>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group col-md-6" >
          <label for="price">Monthly Subscription:</label>
          <input type="text" class="form-control" id="genre" name="price" value="<%= service.price %>"/>
        </div>
        <div class="form-group col-md-6">
          <label for="imgUrl">Image URL:</label>
          <input type="text" class="form-control" id="imgUrl" name="imgUrl" value="<%= service.imgUrl %>"/>
        </div>
      </div>
      
      <button type="submit" class="btn btn-primary red-button">Save</button>

    </form>
    <!-- Footer  -->
    <%- include('../partials/footer') %>
  </body>
</html>